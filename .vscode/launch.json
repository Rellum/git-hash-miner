{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/src/index.ts",
			"preLaunchTask": "npm: build",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"console": "integratedTerminal",
			"args": ["0000"],
			"autoAttachChildProcesses": true // To be able to see logs from worker threads
		}
	]
}
